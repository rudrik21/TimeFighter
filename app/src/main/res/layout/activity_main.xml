<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/your_score"
        android:textColor="@color/may_green"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTimeLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/time_left"
        android:textColor="@color/may_green"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bTapMe"
        android:layout_width="161dp"
        android:layout_height="99dp"
        android:backgroundTint="@color/dollar_bill"
        android:drawableBottom="@android:drawable/ic_menu_view"
        android:drawableTint="@color/cal_poly_pomona_green"
        android:drawableTintMode="src_in"
        android:ellipsize="none"
        android:foregroundTint="@color/cal_poly_pomona_green"
        android:foregroundTintMode="src_in"
        android:isScrollContainer="false"
        android:text="@string/tap_me"
        android:textAllCaps="false"
        android:textColor="@color/cal_poly_pomona_green"
        android:textSize="20sp"
        android:textStyle="bold"
        app:icon="@android:drawable/ic_menu_view"
        app:iconGravity="end"
        app:iconTint="@color/cal_poly_pomona_green"
        app:iconTintMode="src_in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="@color/cal_poly_pomona_green" />
</androidx.constraintlayout.widget.ConstraintLayout>